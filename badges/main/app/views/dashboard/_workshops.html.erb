<section class="mt-6 py-10 bg-indigo-50">
  <div class="max-w-6xl mx-auto px-4">
    <%= render "dashboard_section_header", title: "Featured Workshops",
               subtitle: "Spotlights from our recent programs" %>

    <% if workshops.any? %>
      <%= render "dashboard/workshops_carousel", workshops: workshops %>

      <div class="mt-6 text-right">
        <%= link_to "View all workshops",
                    workshops_path,
                    class: "text-primary font-medium hover:underline" %>
      </div>
    <% else %>
      <p class="text-gray-500">No workshops available right now.</p>
    <% end %>
  </div>
</section>
