<section class="flex flex-col mt-10 px-8">
  <div class="flex flex-col items-end mb-4">
    <div class="inline-block mr-24">
      <h2 class="text-2xl text-gray-700 font-medium m-2"><%= title %></h2>
      <hr class="h-1 bg-primary border-0 rounded-sm my-2 mx-4">
    </div>
  </div>
  <% if resources.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% resources.each do |resource| %>
        <%= render "resources/resource_card", resource: resource.decorate %>
      <% end %>
    </div>
    <a
      href="/resources/"
      class="
        mr-24 mt-6 self-end rounded-md px-3 py-2 text-lg font-medium text-gray-600
        border border-gray-600 hover:bg-primary/10 hover:text-gray-900
      "
    >
      View All
    </a>
  <% else %>
    <p class="py-7 text-center">
      <%= "There are no popular resources at this time." %>
    </p>
  <% end %>
</section>
