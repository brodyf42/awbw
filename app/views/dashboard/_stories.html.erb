<section class="px-8">
  <div class="flex flex-col items-start ">
    <div class="inline-block ml-12">
      <h2 class="text-2xl text-gray-700 font-medium m-2">Community News</h2>
      <hr class="h-1 bg-primary border-0 rounded-sm my-2 mx-4">
    </div>
  </div>

  <div class="flex flex-col">
    <section class="px-8">
      <div class="flex flex-col items-start ">
        <div class="inline-block ml-12">
          <h2 class="text-2xl text-gray-700 font-medium m-2">Community News</h2>
          <hr class="h-1 bg-primary border-0 rounded-sm my-2 mx-4">
        </div>
      </div>

      <div class="flex flex-col">
        <% community_news.each do |community_news_item| %>
          <%= render "community_news_item", community_news_item: community_news_item %>
        <% end %>
        <%= link_to "View all", community_news_index_path, class: "btn btn-secondary-outline" %>
        <a
          href="/community_news"
          class="
        ml-8 mt-2 self-start rounded-md px-3 py-2 text-lg font-medium text-gray-600
        border border-gray-600 hover:bg-primary/10 hover:text-gray-900
      "
        >
          View All
        </a>
      </div>
    </section>
    <a
      href="/community_news"
      class="
        ml-8 mt-2 self-start rounded-md px-3 py-2 text-lg font-medium text-gray-600
        border border-gray-600 hover:bg-primary/10 hover:text-gray-900
      "
    >
      View All
    </a>
  </div>
</section>
